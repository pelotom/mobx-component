{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "tmp",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "typings",
    "newLine": "LF",
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}
